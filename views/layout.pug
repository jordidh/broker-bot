block variables
doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        title broker-bot
        link(rel='stylesheet' href='/stylesheets/style.css')
        block extraHead
        block extraStyles
        block extraScripts

    body
        header
            block header

        nav
            ul.topnav
                li
                    a(href=baseUrl + '/') &Iacute;ndex
                li
                    a(href=baseUrl + '/dashboard') Dashboard
                li
                    a(href=baseUrl + '/markets') Markets Configuration
                li
                    a(href=baseUrl + '/analysis') Markets Analysis

        div
            if (msgAlert)
                div.alert
                    span.closebtn &times;
                    strong Danger!
                    |  #{msgAlert}
            if (msgSuccess)
                div.alert.success
                    span.closebtn &times;
                    strong Success!
                    |  #{msgSuccess}
            if (msgInfo)
                div.alert.info
                    span.closebtn &times;
                    strong Info!
                    |  #{msgInfo}
            if (msgWarning)
                div.alert.warning
                    span.closebtn &times;
                    strong Warning!
                    |  #{msgWarning}

        main
            block content

        footer
            p.small 2021
